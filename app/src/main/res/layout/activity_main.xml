<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/road"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/car1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/car1"
        android:src="@drawable/car1"
        app:layout_constraintBottom_toTopOf="@+id/car2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnknownId" />

    <ImageView
        android:id="@+id/car2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/car2"
        android:contentDescription="@string/car2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/car1"
        android:layout_marginStart="16dp" />



    <Button
        android:id="@+id/btnMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFA500"
        android:onClick="onClickMode"
        android:text="@string/_2"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="308dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnMove1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go1"
        android:textSize="18sp"
        android:backgroundTint="#FF5555"
        android:onClick="onClickMove1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnStart"
        android:layout_marginBottom="16dp" />


    <!-- Кнопка СТАРТ (по центру) -->
    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/startt"
        android:textSize="18sp"
        android:backgroundTint="#00AA00"
        android:onClick="onClickStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnMove1"
        app:layout_constraintEnd_toStartOf="@+id/btnMove2"
        android:layout_marginBottom="16dp" />

    <!-- Кнопка ЕХАТЬ для второй машины (справа) -->
    <Button
        android:id="@+id/btnMove2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go2"
        android:textSize="18sp"
        android:backgroundTint="#FF55AA"
        android:onClick="onClickMove2"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnStart"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:id="@+id/finishLine"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:importantForAccessibility="no"
        android:src="@drawable/finish"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>